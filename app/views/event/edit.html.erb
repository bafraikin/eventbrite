<h1>Modifier votre event</h1>


<%= form_for @event do | f | %>

  <label> Titre de l'event </label><br>
  <%= f.text_field :name %><br>
  <label>Date de l'event</label><br>
  <input id="event_date" name="event[date]" type="date" /><br>
  <label>Prix de l'event</label><br>
  <%= number_field(:event, :price, in: 1.0..20.0, step: 0.5) %><br>
  <label>Description</label><br>
  <%= f.text_area :description%><br>
  <%=  submit_tag("Update")%>
  <%= link_to 'Destroy', @event, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

